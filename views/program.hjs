<!DOCTYPE html>
<html>

<head>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  <!-- {{ title }} tells HJS to use variable title when
  rendering this page -->
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <!-- import jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <script>
  $(document).ready(function() {
      $("#showProgramReqButton").click(function() {
        $("#showProgramReq").toggle();
        return false;
    });
      $("#addKSAButton").click(function() {
        $("#addKSA").toggle();
        return false;
    });
  });
  </script>

  <title>{{ title }}</title>

</head>

<body>
  <h1>Add Program</h1>
  <a href="/">Home</a>

  <form action="/program/record" method="post">
    <div class="form-group">
        <div class="form-group">
            <label for="chooseProgram">Degree</label>
            <select type="text" name="program" id="chooseProgram" class="form-control" required>
                <option disabled selected value> -- select an option -- </option>
                {{#program}}
                <option>{{Degree}}</option>
                {{/program}} 
            </select>
            <input type="concentration" class="form-control" name="concentration" id="inputConcentration"
            aria-describedby="concentrationHelp" placeholder="Concentration" required>
            <input type="options" class="form-control" name="options" id="inputOptions"
            aria-describedby="optionsHelp" placeholder="Options" required>
            <select type="text" name="accreditor" id="chooseAccreditor" class="form-control" required>
                <option disabled selected value> -- select an option -- </option>
                {{#accreditor}}
                <option>{{Accreditor}}</option>
                {{/accreditor}} 
            </select>
        </div>
        <button type="next" class="btn btn-primary" id="showProgramReqButton">Program Requirements</button>
        <button type="next" class="btn btn-primary" id="addKSAButton">Add KSA</button>
    </div>
    <div class="form-group" id="showProgramReq" style="display:none">
      <div class="form-group" id="description">
        <label for="progDesc">Program Description</label>
        <input type="programDesc" class="form-control" name="programDesc" id="inputProgramDesc"
            aria-describedby="descHelp" placeholder="Program Description" required>
        <label for="multiCourses">Are there multiple courses to fill this requirement?</label>
        <input type="radio" name="multiCourses" value="true">Yes
        <input type="radio" name="multiCourses" value="false">No
        <select type="options" name="department" id="department" required>
          <option disabled selected value> -- select an department -- </option>
          <option>Engineering</option>
        <select type="options" name="classes" id="classes" required>
          <option disabled selected value> -- select classes -- </option>
          {{#classes}}
          <option>{{Classes}}</option>
          {{/classes}} 
      </div>
    </div>
    <div class="form-group" id="addKSA" style="display:none">
      <div class="form-group" id="description">
        <label for="inputDescription">KSA Description</label>
        <textarea type="description" class="form-control" name="description" id="inputDescription" required></textarea>
        <label for="multiCourses">Bloom Level</label>
          <input type="radio" name="multiCourses" value="1">1
          <input type="radio" name="multiCourses" value="2">2
          <input type="radio" name="multiCourses" value="3">3
          <input type="radio" name="multiCourses" value="4">4
          <input type="radio" name="multiCourses" value="5">5
        <input type="classification" class="form-control" name="class" id="class"
            aria-describedby="descHelp" placeholder="Classification" required>
        <select type="options" name="classes" id="classes" required>
          <option disabled selected value> -- select ALOs -- </option>
          {{#ALO}}
          <option>{{ALO}}</option>
          {{/ALO}} 
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="form-group">
    <h2>Saved Programs</h2>
    <ul class="list-group">
      {{#program}}
      <!-- Iterate over the array in program variable -->
      <li class="list-group-item">{{Program}} -- {{Description}}</li>
      <!-- fields in the array entry -->
      {{/program}}
      <!-- end of loop -->
  </ul>
</div>

<div>
    <a href="/">Back to Main Page</a>
</div>

</body>

</html>
